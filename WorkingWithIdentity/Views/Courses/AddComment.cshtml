@model WorkingWithIdentity.ViewModels.CourseCommentViewModel


<h2>Add a Comment</h2>

<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<form action="CreateComment">
    <div class="row">
        <div class="col-md-4">
            <div class="ui-widget">
                <label>Select Course</label>
                <input asp-for="CourseName" id="CourseName" name="CourseName" class="form-control" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CommentContent" class="control-label"></label>
        <textarea asp-for="CommentContent" rows="4" cols="30"  class="form-control"  id="comment"></textarea>
        <span asp-validation-for="CommentContent" class="text-danger"></span>
    </div>


    @*<a href="Comment/CreateComment?CourseName=@Model.CourseName&CommentContent=@Model.CommentContent"><button class="btn-primary">Add a Comment</button></a>*@
    <div class="form-group">
        <input type="submit" value="Add Comment" class="btn btn-default" />
    </div>
</form>

<script>
    $("#CourseName").autocomplete({
        source: '@Url.Action("GetName","Courses")'
    });
</script>
